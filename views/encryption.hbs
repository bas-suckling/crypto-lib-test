{{>navbar}}
<section class="header">
    <div class="header-text">
        <h1>Encryption</h1>
        <h2>Implementation of AES-256 encrpytion from the Node.js crypto library</h2>
        <h4>Secret key is hashed using SHA-256</h4>
    </div>
</section>

<section id="plainTextInput">
    <form method="POST" action="/encryption">
        <div class="form-group">
            <label for="key" class="form-item">Secret Key:</label>
            <input class="form-control" value="{{key}}" name="key" placeholder="Write a secret key here.">
        </div>
        <div class="form-group">
            <label for="plainText" class="form-item">Message to be encrypted:</label>
            <input id="plainTextMsg" class="form-control" value="{{plainTextMessage}}" name="plainText" placeholder="Write your message here.">
        </div>
        <div class="form-group">
            <button id="encryptBtn" class="btn btn-light" type="submit" name="encrypt" value="Encrypt!">Encrypt!</button>
        </div>
    </form>
</section>

<section class="display-message">
    <div>
        <p>Secret Key: {{key}}</p>
        <p>Hashed Key: {{hashKey}}</p>
        <p>Original Message: {{plainTextMessage}}</p>
        <p>Encrypted Message: {{encryptedMessage}}</p>
    </div>
</section>
    

