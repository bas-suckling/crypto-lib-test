{{>navbar}}

<section class="header">
  <div class="header-text">
    <h1>Generating the Secret Key</h1>
    <h2>Implementation of the Diffie-Hellman asymetric key generator</h2>
  </div>
</section>

<section id="encryptedTextInput">
  <form method="POST" action="/decryption-demo">
    <div>
      <h2>Very Large Prime Number (n): {{modulus}}</h4>
      <h2>Small Prime Number (g): {{smallPrime}}</h4>
    </div>
    <div class="form-group">
      <label for="aliceKey" class="form-item">Alice's Secret Key:</label>
      <input class="form-control" value="{{aliceKey}}" name="aliceKey" placeholder="1234567890">
    </div>
    <div class="form-group">
      <label for="bobKey" class="form-item">Bob's Secret Key:</label>
      <input class="form-control" value="{{bobKey}}" name="bobKey" placeholder="1234567890">
    </div>

    <div class="form-group">
      <button id="generateKeyBtn" class="btn btn-light" type="submit" name="generate" value="generate">Generate Key!</button>
    </div>
  </form>
</section>
<section>
  <h2>Generated Key: {{generatedKey}}</h2>
</section>